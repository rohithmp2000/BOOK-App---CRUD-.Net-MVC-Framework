@model BookMVC.tblBook
@{
    ViewBag.Title = "Create";
}

<h2>Enter Details of the new Book</h2>

@using (Html.BeginForm("Create","Book",FormMethod.Post,new { enctype = "multipart/form-data" }))
            {
                <table class="table">
                    <tr>
                        <td>Enter the Book Name :</td>
                        <td>@Html.EditorFor(Model => Model.book_name, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                    <tr>
                        <td>Enter the Book Author :</td>
                        <td>@Html.EditorFor(Model => Model.book_author, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                    <tr>
                        <td>Enter the Book Price :</td>
                        <td>@Html.EditorFor(Model => Model.book_price, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="submit" name="submit" value="Add Book" class="btn btn-success text-center" />
                        </td>
                    </tr>
                </table>
            }

